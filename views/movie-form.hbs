<!-- movies.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Movies</h1>
    <form action="/api/movies" method="GET">
        <label for="page">Page:</label>
        <input type="number" id="page" name="page" min="1" value="{{page}}" required>
        
        <label for="perPage">Per Page:</label>
        <input type="number" id="perPage" name="perPage" min="1" value="{{perPage}}" required>
        
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{title}}">
        
        <button type="submit">Fetch Movies</button>
    </form>

    <div class="movies-list">
        {{#if movies}}
            <h2>Movie List</h2>
            <ul>
                {{#each movies}}
                    <li>{{this.title}} - {{this.genre}}</li>
                {{/each}}
            </ul>
        {{else}}
            <p>No movies found.</p>
        {{/if}}
    </div>
</body>
</html>
