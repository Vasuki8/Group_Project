<!-- add-movie.hbs -->

<html>
  <head>
    <title>Add Movie</title>
    <link rel="stylesheet" href="/movie-form-styles.css" />
  </head>
  <body>
    <h1>Add New Movie</h1>
    <form action="/api/movies" method="post">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" /><br /><br />

      <label for="plot">Plot:</label>
      <textarea id="plot" name="plot"></textarea><br /><br />

      <label for="genres">Genres:</label>
      <input type="text" id="genres" name="genres" /><br /><br />

      <label for="runtime">Runtime:</label>
      <input type="number" id="runtime" name="runtime" /><br /><br />

      <label for="cast">Cast:</label>
      <input type="text" id="cast" name="cast" /><br /><br />

      <label for="num_mflix_comments">Number of Comments:</label>
      <input
        type="number"
        id="num_mflix_comments"
        name="num_mflix_comments"
      /><br /><br />

      <label for="fullplot">Full Plot:</label>
      <textarea id="fullplot" name="fullplot"></textarea><br /><br />

      <label for="languages">Languages:</label>
      <input type="text" id="languages" name="languages" /><br /><br />

      <label for="released">Released Date:</label>
      <input type="date" id="released" name="released" /><br /><br />

      <label for="directors">Directors:</label>
      <input type="text" id="directors" name="directors" /><br /><br />

      <label for="rated">Rated:</label>
      <input type="text" id="rated" name="rated" /><br /><br />

      <label for="awards">Awards:</label>
      <input type="text" id="awards" name="awards" /><br /><br />

      <label for="lastupdated">Last Updated:</label>
      <input type="date" id="lastupdated" name="lastupdated" /><br /><br />

      <label for="year">Year:</label>
      <input type="number" id="year" name="year" /><br /><br />

      <label for="imdb_rating">IMDB Rating:</label>
      <input type="number" id="imdb_rating" name="imdb.rating" /><br /><br />

      <label for="imdb_votes">IMDB Votes:</label>
      <input type="number" id="imdb_votes" name="imdb.votes" /><br /><br />

      <label for="imdb_id">IMDB ID:</label>
      <input type="number" id="imdb_id" name="imdb.id" /><br /><br />

      <label for="countries">Countries:</label>
      <input type="text" id="countries" name="countries" /><br /><br />

      <label for="type">Type:</label>
      <input type="text" id="type" name="type" /><br /><br />

      <label for="tomatoes_rating">Tomatoes Rating:</label>
      <input
        type="number"
        id="tomatoes_rating"
        name="tomatoes.viewer.rating"
      /><br /><br />

      <label for="tomatoes_reviews">Tomatoes Reviews:</label>
      <input
        type="number"
        id="tomatoes_reviews"
        name="tomatoes.viewer.numReviews"
      /><br /><br />

      <label for="tomatoes_meter">Tomatoes Meter:</label>
      <input
        type="number"
        id="tomatoes_meter"
        name="tomatoes.viewer.meter"
      /><br /><br />

      <label for="tomatoes_lastupdated">Tomatoes Last Updated:</label>
      <input
        type="date"
        id="tomatoes_lastupdated"
        name="tomatoes.lastUpdated"
      /><br /><br />

      <button type="submit">Submit</button>
    </form>
  </body>
</html>