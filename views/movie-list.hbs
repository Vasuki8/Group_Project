<html>
<head>
  <title>Movies List</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    /* CSS styles for movie cards */
    .movie-card {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      margin-bottom: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .movie-card h2 {
      margin-top: 0;
    }

    .movie-card p {
      margin-bottom: 5px;
    }

    .signup-btn {
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      margin-top: 20px;
    }

    .signup-btn:hover {
      background-color: #0056b3;
    }
    
  </style>
</head>
<body>

   {{#if loggedIn}}
                <li>
                    <form action="/logout" method="post">
                        <button type="submit">Sign out</button>
                    </form>
                </li>
            {{/if}}'

  <h1>Movies List</h1>'
 
  {{#if message}}
    <p>{{message}}</p>
  {{else}}
    {{#each movies}}
      <div class="movie-card">
        <h2>{{title}}</h2>
        <p><strong>Plot:</strong> {{plot}}</p>
        <p><strong>Genres:</strong> {{genres}}</p>
        <p><strong>Runtime:</strong> {{runtime}}</p>
        <p><strong>Cast:</strong> {{cast}}</p>
        <p><strong>Number of Comments:</strong> {{num_mflix_comments}}</p>
        <p><strong>Full Plot:</strong> {{fullplot}}</p>
        <p><strong>Languages:</strong> {{languages}}</p>
        <p><strong>Released:</strong> {{released}}</p>
        <p><strong>Directors:</strong> {{directors}}</p>
        <p><strong>Rated:</strong> {{rated}}</p>
        <p><strong>Awards:</strong> {{awards}}</p>
        <p><strong>Last Updated:</strong> {{lastupdated}}</p>
        <p><strong>Year:</strong> {{year}}</p>
        <p><strong>IMDb Rating:</strong> {{imdb.rating}}</p>
        <p><strong>IMDb Votes:</strong> {{imdb.votes}}</p>
        <p><strong>IMDb ID:</strong> {{imdb.id}}</p>
        <p><strong>Countries:</strong> {{countries}}</p>
        <p><strong>Type:</strong> {{type}}</p>
        <p><strong>Tomato Viewer Rating:</strong> {{tomatoes.viewer.rating}}</p>
        <p><strong>Tomato Viewer Reviews:</strong> {{tomatoes.viewer.numReviews}}</p>
        <p><strong>Tomato Viewer Meter:</strong> {{tomatoes.viewer.meter}}</p>
        <p><strong>Last Tomato Updated:</strong> {{tomatoes.lastUpdated}}</p>
      </div>
    {{/each}}
  {{/if}}

  <button><a href="/register" class="signup-btn">Sign up</a></button>


</body>
</html>
